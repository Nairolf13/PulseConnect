{% extends "../layouts/base.twig" %}

{% block style %}
	<link rel="stylesheet" href="/../../assets/css/addFriend.css">
{% endblock %}

{% block title %}
	<title>{{ title }}</title>
{% endblock %}

{% block main %}
	{% include "../partials/header.twig" %}
	<div class="header">
		<li>
			<a href="/following" class="back-arrow"><img src="/../../assets/imgs/flecheBack.png" alt="arrowBack"></a>
		</li>
		<div class="title">
			<h1>Suggestions dâ€™ami</h1>
		</div>
	</div>
	<input type="text" id="searchUser" placeholder="Rechercher un utilisateur...">
	<section>
		<div class="container">
			<ul>
				{% for user in usersCo %}
					<li class="user-card" data-search="{{ user.userName | lower }}">
						<div class="user-info">
							<img src="{{ user.picture }}" alt="Photo de profil" class="profile-pic" onerror="this.src='/../../assets/imgs/Pp.webp'">
							<div class="user-details">
								<p class="user-name">{{ user.userName }}</p>
								<p class="full-name">{{ user.firstName }}
									{{ user.lastName }}</p>
								<p class="description">{{ user.description }}</p>
							</div>
						</div>
						<form action="/follow/{{ user.id_user }}" method="POST">
							<button type="submit" class="follow-button">Suivre</button>
						</form>
					</li>
				{% endfor %}
			</ul>
		</div>
	</section>
	{% include "../partials/error.twig" %}

	{% block script %}
		<script src="/../../assets/js/addFriend.js"></script>
	{% endblock %}

{% endblock %}
